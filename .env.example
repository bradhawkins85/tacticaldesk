# Example environment configuration for Tactical Desk
# This file is generated by scripts/update_env_example.py based on app.core.config.Settings.
# Do not edit manually; update the Settings model instead.

APP_NAME=Tactical Desk

# SQLAlchemy database URL
DATABASE_URL=sqlite+aiosqlite:///./tacticaldesk.db

# MySQL host
TACTICAL_DESK_MYSQL_HOST=

# MySQL port
TACTICAL_DESK_MYSQL_PORT=3306

# MySQL username
TACTICAL_DESK_MYSQL_USER=

# MySQL password
TACTICAL_DESK_MYSQL_PASSWORD=

# MySQL database name
TACTICAL_DESK_MYSQL_DATABASE=

# Secret key for signing tokens
SECRET_KEY=change-me

# Allow executing provisioning scripts from the API
TACTICAL_DESK_ENABLE_INSTALLERS=false

# Default ntfy base URL override
TACTICAL_DESK_NTFY_BASE_URL=

# Default ntfy topic override
TACTICAL_DESK_NTFY_TOPIC=

# Default ntfy access token
TACTICAL_DESK_NTFY_TOKEN=

# Default SMTP host when not configured per module
TACTICAL_DESK_SMTP_HOST=

# Default SMTP port
TACTICAL_DESK_SMTP_PORT=587

# Default SMTP username
TACTICAL_DESK_SMTP_USERNAME=

# Default SMTP password
TACTICAL_DESK_SMTP_PASSWORD=

# Default SMTP sender email address
TACTICAL_DESK_SMTP_SENDER=

# Enable STARTTLS when connecting to SMTP
TACTICAL_DESK_SMTP_USE_TLS=true

# Use implicit TLS when connecting to SMTP
TACTICAL_DESK_SMTP_USE_SSL=false

# API key required for ChatGPT MCP connector
TACTICAL_DESK_MCP_API_KEY=
